generator client {
  provider      = "prisma-client-js"
  engineType    = "binary"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(cuid())
  firstName     String?
  lastName      String?
  pseudo        String?
  aboutMe       String?
  email         String       @unique
  emailVerified Boolean      @default(false)
  password      String
  birthDate     DateTime?
  phone         String?
  image         String?
  roleId        Int?
  role          Role?        @relation(fields: [roleId], references: [id])
  memberSince   DateTime?
  preferences   Preferences?
  isFirstLogin  Boolean      @default(true)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @default(now()) @updatedAt
  sessions      Session[]
  posts         Post[]
  comments      Comment[]
  likes         Like[]
  avatar        String?
  Courses       Course[]     @relation("UserCourses")
  Stage         Stage[]      @relation("UserStages")
  Activities    Activity[]   @relation("UserActivities")
}

model Permission {
  id          Int               @id @default(autoincrement())
  name        String            @unique
  description String?
  roles       RolePermissions[]
}

model Role {
  id          Int               @id @default(autoincrement())
  name        String            @unique
  permissions RolePermissions[]
  description String?
  users       User[]
}

model RolePermissions {
  roleId       Int
  permissionId Int

  role       Role       @relation(fields: [roleId], references: [id])
  permission Permission @relation(fields: [permissionId], references: [id])

  @@id([roleId, permissionId])
}

model Preferences {
  id           Int     @id @default(autoincrement())
  description  String?
  displayEmail Boolean @default(false)
  displayPhone Boolean @default(false)
  darkMode     Boolean @default(true)
  userId       String  @unique
  user         User    @relation(fields: [userId], references: [id])
}

model Session {
  id        String   @id @default(cuid())
  // token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      String?
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt
}

model Course {
  id         Int      @id @default(autoincrement())
  label      String   @unique
  // discipline String   // 'CALLiGRAPHY' | 'MARTIAL ART'
  // style      String   
  content    Json
  beginTime  Int
  endTime    Int
  day        Day
  requisites String[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  coachId    String
  coach      User     @relation("UserCourses", fields: [coachId], references: [id])
}

model Slot {
  id         Int       @id @default(autoincrement())
  beginTime  Int
  endTime    Int
  activityId Int?
  activity   Activity? @relation(fields: [activityId], references: [id])
}

model Activity {
  id           Int      @id @default(autoincrement())
  name         String
  description  String?
  slots        Slot[]
  martialArt   String
  instructorId String
  instructor   User     @relation("UserActivities", fields: [instructorId], references: [id])
  origin       String? // e.g., "Chine", "Philippines"
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([name])
}

model Category {
  id   Int    @id @default(autoincrement())
  type String @unique
}

model MartialArt {
  id          Int     @id @default(autoincrement())
  name        String
  style       String?
  origin      String?
  description String?
}

model Stage {
  id            Int      @id @default(autoincrement())
  label         String
  date          DateTime // date of the stage
  description   Json // details about the stage
  beginTime     Int // in minutes from midnight
  endTime       Int // in minutes from midnight
  program       Json
  animatorId    String // references User.id
  animator      User     @relation("UserStages", fields: [animatorId], references: [id]) // the user who animates the stage
  createdAt     DateTime @default(now()) // timestamp when the stage was created
  updatedAt     DateTime @updatedAt // timestamp when the stage was last updated
  preRegistered String[] // list of User IDs who have pre-registered
}

model Post {
  id              Int       @id @default(autoincrement())
  title           String // title of the post
  content         Json // content of the post in JSON format
  authorId        String // references User.id
  author          User      @relation(fields: [authorId], references: [id]) // the user who authored the post
  createdAt       DateTime  @default(now()) // timestamp when the post was created
  updatedAt       DateTime  @updatedAt // timestamp when the post was last updated
  publicationDate DateTime? // optional publication date
  comments        Comment[]
  likes           Like[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   Json
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  articleId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  post      Post?    @relation(fields: [postId], references: [id])
  postId    Int?
}

model Like {
  id     Int     @id @default(autoincrement())
  postId Int // references Post.id
  post   Post    @relation(fields: [postId], references: [id]) // the post that is liked
  userId String // references User.id
  user   User    @relation(fields: [userId], references: [id]) // the user who liked the post
  like   Boolean @default(false) // true for like, false for unlike
}

enum Day {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

