generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
  engineType    = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(cuid())
  firstName     String?
  lastName      String?
  email         String       @unique
  emailVerified Boolean      @default(false)
  password      String
  birthDate     DateTime?
  phone         String?
  image         String?
  roleId        Int?
  memberSince   DateTime?
  isFirstLogin  Boolean      @default(true)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @default(now()) @updatedAt
  aboutMe       String?
  pseudo        String?
  avatar        String?
  Activities    Activity[]   @relation("UserActivities")
  comments      Comment[]
  Courses       Course[]     @relation("UserCourses")
  likes         Like[]
  posts         Post[]
  preferences   Preferences?
  sessions      Session[]
  Stage         Stage[]      @relation("UserStages")
  role          Role?        @relation(fields: [roleId], references: [id])
}

model Permission {
  id          Int               @id @default(autoincrement())
  name        String            @unique
  description String?
  roles       RolePermissions[]
}

model Role {
  id          Int               @id @default(autoincrement())
  name        String            @unique
  description String?
  permissions RolePermissions[]
  users       User[]
}

model RolePermissions {
  roleId       Int
  permissionId Int
  permission   Permission @relation(fields: [permissionId], references: [id])
  role         Role       @relation(fields: [roleId], references: [id])

  @@id([roleId, permissionId])
}

model Preferences {
  id           Int     @id @default(autoincrement())
  displayEmail Boolean @default(false)
  displayPhone Boolean @default(false)
  darkMode     Boolean @default(true)
  userId       String  @unique
  description  String?
  user         User    @relation(fields: [userId], references: [id])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  createdAt DateTime @default(now())
  expiresAt DateTime
  role      String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt
}

model Course {
  id         Int      @id @default(autoincrement())
  beginTime  Int
  endTime    Int
  day        Day
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  content    Json
  label      String   @unique
  coachId    String
  requisites String[]
  coach      User     @relation("UserCourses", fields: [coachId], references: [id])
}

model Slot {
  id         Int       @id @default(autoincrement())
  beginTime  Int
  endTime    Int
  activityId Int?
  activity   Activity? @relation(fields: [activityId], references: [id])
}

model Activity {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  martialArt   String
  instructorId String
  origin       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  description  String?
  instructor   User     @relation("UserActivities", fields: [instructorId], references: [id])
  slots        Slot[]
}

model Category {
  id   Int    @id @default(autoincrement())
  type String @unique
}

model MartialArt {
  id          Int     @id @default(autoincrement())
  name        String
  style       String?
  origin      String?
  description String?
}

model Stage {
  id            Int      @id @default(autoincrement())
  date          DateTime
  beginTime     Int
  endTime       Int
  preRegistered String[]
  animatorId    String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  label         String
  program       Json
  description   Json
  animator      User     @relation("UserStages", fields: [animatorId], references: [id])
}

model Post {
  id              Int       @id @default(autoincrement())
  title           String
  content         Json
  authorId        String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  publicationDate DateTime?
  comments        Comment[]
  likes           Like[]
  author          User      @relation(fields: [authorId], references: [id])
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   Json
  authorId  String
  articleId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  postId    Int?
  author    User     @relation(fields: [authorId], references: [id])
  post      Post?    @relation(fields: [postId], references: [id])
}

model Like {
  id     Int     @id @default(autoincrement())
  postId Int
  userId String
  like   Boolean @default(false)
  post   Post    @relation(fields: [postId], references: [id])
  user   User    @relation(fields: [userId], references: [id])
}

model CloudinaryFolder {
  id        String                @id @default(cuid())
  appRoot   String
  fullPath  String
  status    CloudinaryFolderStatus
  createdAt DateTime              @default(now())
  updatedAt DateTime              @updatedAt

  @@unique([appRoot, fullPath])
  @@index([appRoot])
  @@index([appRoot, status])
}

enum CloudinaryFolderStatus {
  pending
  published
  bin
}

enum Day {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

enum WushuStyle {
  CHOY_LI_FUT
  TAI_CHI_CHUAN
  TANG_LANG_QUAN
  WING_CHUN
  CHANG_QUAN
  SHAOLIN_QUAN
  FAN_ZI_QUAN
  CHUO_JIAO
  BA_JI_QUAN
  HUNG_GAR
  LAU_GAR
  MOK_GAR
  XING_YI_QUAN
  BA_QUA_ZHANG
  HOU_QUAN
  SHE_QUAN
  YING_QUAN
  HU_QUAN
  HE_QUAN
  ZUI_QUAN
  SHUAI_JIAO
  QI_GONG
}
